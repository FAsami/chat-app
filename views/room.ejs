<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        display: flex;
        max-width: 1170px;
        margin: 0 auto;
        height: 100vh;
      }
      .video-wrapper {
        display: flex;
        align-items: center;
        flex-direction: column;
        gap: 1rem;
      }
      .message-container {
        height: 100%;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: end;
        background-color: #9191912e;
      }
      .messages {
        height: 100%;
        overflow-y: auto;
      }
      .message-send {
        display: flex;
        justify-self: flex-end;
        gap: 0.25rem;
        padding: 1rem;
      }
      .message {
        padding: 0 1rem;
        margin-bottom: 12px;
      }
      .sender {
        display: block;
        color: #5b5b5b;
        margin: 0 4px 4px 0;
      }
      .content {
        width: 100%;
        background-color: #ffffff4d;
        padding: 8px;
        border-radius: 4px;
      }
      input {
        display: block;
        width: 100%;
        height: 2rem;
        padding: 12px;
      }

      video {
        height: 480px;
        width: 640px;
        position: relative;
        z-index: 10;
      }
      #video-container {
        height: 480px;
        width: 640px;
        background-color: #f4f4f4;
        position: relative;
      }
      [data-remote="true"]::after {
        content: "CLICK TO PLAY";
        color: #303030;
        font-size: 2rem;
        position: absolute;
        top: 50%;
        left: 30%;
        text-align: center;
        z-index: 1;
      }
      #action-buttons {
        display: none;
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <div class="video-wrapper">
      <div id="video-container">
        <video></video>
      </div>
      <div id="action-buttons">
        <button id="share-screen">Share screen</button>
        <button id="stop-share">Stop share</button>
        <button id="start-recording">Start course</button>
        <button id="stop-recording">Stop course</button>
      </div>
    </div>
    <div class="message-container">
      <div id="messages" class="messages"></div>
      <form id="message-form" class="message-send">
        <input id="input-form" placeholder="Enter message" />
        <button type="submit">SEND</button>
      </form>
    </div>
  </body>
  <script src="script.js"></script>
</html>
