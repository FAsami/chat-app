<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        display: flex;
        max-width: 1170px;
        margin: 0 auto;
        height: 100vh;
      }
      .video-wrapper {
        display: flex;
        align-items: center;
        flex-direction: column;
        gap: 1rem;
      }
      .message-container {
        height: 100%;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: end;
        background-color: #9191912e;
      }
      .messages {
        height: 100%;
        overflow-y: auto;
      }
      .message-send {
        display: flex;
        justify-self: flex-end;
        gap: 0.25rem;
        padding: 1rem;
      }
      .message {
        padding: 0 1rem;
        margin-bottom: 12px;
      }
      .sender {
        display: block;
        color: #5b5b5b;
        margin: 0 4px 4px 0;
      }
      .content {
        width: 100%;
        background-color: #ffffff4d;
        padding: 8px;
        border-radius: 4px;
      }
      input {
        display: block;
        width: 100%;
        height: 2rem;
        padding: 12px;
      }

      video {
        height: 480px;
        width: 640px;
        position: relative;
        z-index: 10;
      }
      #video-container,
      #stream-record-container {
        height: 480px;
        width: 640px;
        background-color: #f4f4f4;
        position: relative;
      }
      #stream-record-container {
        background-color: transparent;
      }
      [data-remote="true"]::after {
        content: "CLICK TO PLAY";
        color: #303030;
        font-size: 2rem;
        position: absolute;
        top: 50%;
        left: 30%;
        text-align: center;
        z-index: 1;
      }
      #action-buttons {
        display: none;
        margin-top: 20px;
      }
      button {
        padding: 0.5rem;
        text-transform: uppercase;
      }
      #recording-state {
        width: 20px;
        height: 20px;
        background-color: rgb(255, 118, 118);
        border-radius: 50%;
        animation: pulse 1s infinite alternate;
        display: none;
        transform: translate(-0.25rem, 0.25rem);
      }

      @keyframes pulse {
        0% {
          opacity: 1;
        }
        100% {
          opacity: 0.2;
        }
      }
      #admin-state {
        display: none;
        margin-top: 0.5rem;
      }
      #uploading-progress {
        display: none;
      }
      #loader-line {
        width: 160px;
        height: 0.5rem;
        position: relative;
        overflow: hidden;
        background-color: #ddd;
        border-radius: 999px;
        display: none;
        border: 1px solid #ddd;
      }

      #loader-line:before {
        content: "";
        position: absolute;
        left: -50%;
        height: 0.5rem;
        width: 40%;
        background-color: #0000ee;
        animation: lineAnim 1s linear infinite;
        border-radius: 999px;
      }

      @keyframes lineAnim {
        0% {
          left: -40%;
        }
        50% {
          left: 20%;
          width: 80%;
        }
        100% {
          left: 100%;
          width: 100%;
        }
      }
    </style>
  </head>
  <body>
    <div class="video-wrapper">
      <div id="video-container">
        <video id="remote-video"></video>
      </div>
      <div id="stream-record-container"></div>
      <div id="action-buttons">
        <span id="recording-state"></span>
        <button id="share-screen">Share screen</button>
        <button id="stop-share">Stop share</button>
        <button id="start-recording">Start course</button>
        <button id="stop-recording">Stop course</button>
      </div>
      <div id="uploading-progress">
        <label id="upload-label" for="uploading-progress"
          >Uploading <span id="uploading-progress-count">(0%)</span></label
        >
        <progress id="progress" value="0" max="100">0%</progress>
        <div id="loader-line"></div>
        <div id="uploading-status"></div>
      </div>

      <div id="admin-state">Admin disconnected !</div>
    </div>
    <div class="message-container">
      <div id="messages" class="messages"></div>
      <form id="message-form" class="message-send">
        <input id="input-form" placeholder="Enter message" />
        <button type="submit">SEND</button>
      </form>
    </div>
  </body>
  <script src="script.js"></script>
</html>
